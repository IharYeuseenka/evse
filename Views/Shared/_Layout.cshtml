<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Книжный магазин</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />

    <link href="@Url.Content("~/css/templatemo_style.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/ddsmoothmenu.css")" />
    <link rel="stylesheet" type="text/css" media="all" href="@Url.Content("~/css/jquery.dualSlider.0.2.css")" />
    <link type="text/css" href="@Url.Content("~/css/jquery-ui.css")" rel="Stylesheet" />
    	
</head>

<body>
    <div id="templatemo_wrapper">
	    <div id="templatemo_header">
            <div id="site_title">
        	    <h1><a rel="nofollow" href="@Url.Content("~/Home/Index")">BOOK'ва</a></h1>
            </div>
            <div id="header_right">
                <section id="login">
                   @Html.Partial("_LoginPartial")
                </section>
		    </div>
        </div> <!-- END of templatemo_header -->
        <div class="cleaner"></div>
        <div id="templatemo_menu">
    	    <div id="top_nav" class="ddsmoothmenu">
                <ul>
                    <li><a href="@Url.Content("~/Home/Index")">Главная</a></li>
                    <li><a href="@Url.Content("~/Home/Catalog")">Каталог</a></li>
                    <li><a href="@Url.Content("~/Home/About")">О нас</a></li>
                    <li><a href="@Url.Content("~/Home/Contacts")">Контакты</a></li>
                </ul>
                <br style="clear: left" />
            </div> <!-- end of ddsmoothmenu -->
            <div id="menu_second_bar">
        	    <div id="top_shopping_cart">
                    @Html.Partial("_Cart")
                </div>
        	    <div id="templatemo_search">
                    <form action="~/Home/Catalog" method="post">
                      <input type="text" value="Поиск" name="keyword" id="keyword" title="Ключевые слова" onfocus="clearText(this)" onblur="clearText(this)" class="txt_field" />
                      <input type="submit" name="Search" value=" Поиск " id="searchbutton" title="Поиск" class="sub_btn"  />
                    </form>
                </div>
                <div class="cleaner"></div>
    	    </div>
        </div>
         <!-- END of templatemo_menu -->
    
        <div id="templatemo_main">
            @RenderSection("Slider", false)
            @RenderSection("Sidebar")
            @RenderBody()
            <div class="cleaner"></div>
        </div> <!-- END of templatemo_main -->
    
        <div id="templatemo_footer">
    	    <p>
			    <a href="@Url.Content("~/Home/Index")">Главная</a> | <a href="@Url.Content("~/Home/Catalog")">Каталог</a> | <a href="@Url.Content("~/Home/About")">О нас</a> | <a href="@Url.Content("~/Home/Contacts")">Контакты</a>
		    </p>
    	    Copyright © 2014 <a href="@Url.Content("~/Home/Index")">Book'ва</a> <!-- Credit: www.templatemo.com -->
        </div> <!-- END of templatemo_footer -->
    </div> <!-- END of templatemo_wrapper -->

    <div id="dialog" title="Пожалуйста, зарегистрируйтесь.">
	    <p>Для продолжения вам нужно <a href="@Url.Content("~/Account/Login")">зарегистрироваться</a></p>
    </div>

    <script type="text/javascript" src="@Url.Content("~/js/jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/jquery-ui.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/ddsmoothmenu.js")"></script>
    <script src="@Url.Content("~/js/jquery.easing.1.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/jquery.timers-1.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/jquery.dualSlider.0.3.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function clearText(field) {
            if (field.defaultValue == field.value) field.value = '';
            else if (field.value == '') field.value = field.defaultValue;
        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".carousel").dualSlider({
                auto: true,
                autoDelay: 6000,
                easingCarousel: "swing",
                easingDetails: "easeOutBack",
                durationCarousel: 1000,
                durationDetails: 600
            });
        });
    </script>
     <script type="text/javascript">
         $("#dialog").dialog({
             autoOpen: false,
             width: 400,
             modal: true,
             buttons: [
                 {
                     text: "Отмена",
                     click: function () {
                         $(this).dialog("close");
                     }
                 }
             ]
         });

         $(".dialog-link").click(function (event) {
             $("#dialog").dialog("open");
             event.preventDefault();
         });
    </script>
    <script type="text/javascript">
        ddsmoothmenu.init({
	        mainmenuid: "top_nav", //menu DIV id
	        orientation: 'h', //Horizontal or vertical menu: Set to "h" or "v"
	        classname: 'ddsmoothmenu', //class added to menu's outer DIV
	        //customtheme: ["#1c5a80", "#18374a"],
	        contentsource: "markup" //"markup" or ["container_id", "path_to_menu_file"]
        })
    </script>
</body>
</html>